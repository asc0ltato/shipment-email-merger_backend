{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/models/*": ["./src/models/*"],
      "@/repositories/*": ["./src/repositories/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}